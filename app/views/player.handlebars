<h1>{{title}}</h1>

<img class="cover-lg lazy" alt="{{title}} Cover Image" data-src="{{url_thumdnail}}" />

<p>{{{description}}}</p>



<ol class="genre-cover">
    {{#each tracks}}
    <li id="track_li_{{id}}"><a id="track_{{id}}" class="track" href="{{media.mp3}}">{{title}}</a></li>
    {{/each}}
</ol>

<div id="player"></div>

<script id="player-template" type="text/x-javascript-template">
    <div class="player">
        <div class="cover-art">
            <img class="lazy" alt="{{title}} Cover Image" data-src="{{url_thumdnail}}" />
        </div>
        <div id="current_track">{{title}}</div>
        <div class="time-display">
            <div id="current_time">00:00:00</div>
            <div id="duration">00:00:00</div>
        </div>
        <div id="slider">
            <div class="progress"></div>
        </div>
        <div class="button-container">
          <button id="previous"> Previous Track </button>
          <button id="rewind"> Rewind</button>
          <button id="playpause"> Play / Pause </button>
          <button id="stop"> Stop </button>
          <button id="fastforward"> Fast Forward </button>
          <button id="next"> Next Track </button>
        </div>
    </div>
</script>

<script src="/js/player.min.js"></script>
